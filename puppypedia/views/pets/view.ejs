<!DOCTYPE html>
<html>
<%- include('../partials/header')%>

    <body>
        <div id="preloader"><div id="status"><div class="spinner"></div></div></div>

        <%- include('../partials/navbar')%>
            <%- include('../partials/sidebar')%>
                <div class="main-content">
                    <div class="page-content">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body">

                                        <h2 class="card-title">Owner Detail</h2>

                                        <p class="card-title-desc"></p>

                                        <div class="row mb-3">
                                            <label for="example-text-input" class="col-sm-2 col-form-label"></label>
                                            <div class="col-sm-10">
                                                <% if(pet.user.image != '') { %>
                                                    <img id="blah"  style="height: 150px;" class="img-fluid img-thumbnail my-3" src="/assets/images/users/<%= pet.user.image%>" />
                                                <% } else { %>
                                                    <img id="blah" style="height: 150px;" class="img-fluid img-thumbnail my-3" src="/assets/images/users/user.png" />
                                                <% } %> 
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="example-text-input" class="col-sm-3 col-form-label">Name:</label>
                                            <div class="col-sm-9 col-form-label">
                                              <%=pet.user.name%>
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <label for="example-text-input" class="col-sm-3 col-form-label">Email:</label>
                                            <div class="col-sm-9 col-form-label">
                                              <%=pet.user.email%>
                                            </div>
                                        </div>           
                                     
                                </div>
                            </div>
                        </div>
                      
                      

                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">

                                    <h2 class="card-title">Pet Detail</h2>

                                    <p class="card-title-desc"></p>

                                    <div class="row mb-3">
                                        <label for="example-text-input" class="col-sm-2 col-form-label"></label>
                                        <div class="col-sm-10">
                                            <% if(pet.image != '') { %>
                                                <img id="blah"  style="height: 150px;" class="img-fluid img-thumbnail my-3" src="/assets/images/pets/<%= pet.image%>" />
                                            <% } else { %>
                                                <img id="blah" style="height: 150px;" class="img-fluid img-thumbnail my-3" src="/assets/images/users/user.png" />
                                            <% } %> 
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label for="example-text-input" class="col-sm-3 col-form-label">Name:</label>
                                        <div class="col-sm-9 col-form-label">
                                          <%=pet.name%>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <label for="example-text-input" class="col-sm-3">Gender:</label>
                                        <div class="col-sm-9">
                                            <%if(pet.gender==1){%>
                                                Male
                                                <%}else{%>
                                                    Female
                                                    <%}%>
                                        </div>
                                    </div>     
                                    <div class="row mb-3">
                                        <label for="example-text-input" class="col-sm-3">Age:</label>
                                        <div class="col-sm-9">
                                          <%=pet.age%>
                                         
                                        </div>
                                    </div>   
                                    
                                    <div class="row mb-3">
                                        <label for="example-text-input" class="col-sm-3 col-form-label">Weight:</label>
                                        <div class="col-sm-9 col-form-label">
                                          <%=pet.weight%>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <label for="example-text-input" class="col-sm-3 col-form-label">Breed:</label>
                                        <div class="col-sm-9 col-form-label">
                                          <%=pet.breed%>
                                        </div>
                                    </div>

                                    <div class="row mb-2">
                                        <label for="example-text-input" class="col-sm-3 col-form-label">About Us:</label>
                                        <div class="col-sm-9 col-form-label">
                                          <%=pet.about%>
                                        </div>
                                    </div>
                                 
                            </div>
                        </div>
                    </div>
                    </div>
                </div>  </div>
    </body>
    <%- include('../partials/footer')%>

</html>