<!DOCTYPE html>
<html>
<%- include('../partials/header')%>
<style>
    input select:focus{
        color: black !important; 
    }
</style>
    <body>
        <div id="preloader"><div id="status"><div class="spinner"></div></div></div>

        <%- include('../partials/navbar')%>
            <%- include('../partials/sidebar')%>
                <div class="main-content">
                    <div class="page-content">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="card">
                                        <div class="card-body">

                                            <h4 class="card-title">Edit Pet</h4>
                                            <!-- <a href="#" style="float: right; margin-bottom: 10px;" class="btn btn-primary waves-effect waves-light">Add Pets</a> -->
                                            <form action=""  method="post" id="editPet"  enctype="multipart/form-data">
                                                <div class="panel panel-flat">
                                                    <div class="panel-body col-md-6">
                                                        <label for="image">
                                                            <input type="file" name="image" id="image" style="display:none;" required/>
                                                            <%if(pet.image!==""){%>
                                                                <img src="/assets/images/pets/<%=pet.image%>" id="imageid" class="img-fluid img-thumbnail my-3" width="150" />

                                                                <%}else{%>
                                                                    <img src="/assets/images/categories/add_img.png" class="img-fluid img-thumbnail my-3" height="150" width="150" />
                                                                    <%}%>

                                                         </label>
                                                        <div class="form-group">
                                                            <label>Name:</label>
                                                            <input type="text" class="form-control" value="<%=pet.name%>" placeholder="Name" required name="name">
                                                        </div>
                                                        <div class="form-group">
                                                            <label>Age:</label>
                                                            <input type="number" min="1" class="form-control" value="<%=pet.age%>" placeholder="Age" required name="age">
                                                        </div>
                                                        <div class="form-group">
                                                            <label>Gender:</label>
                                                            <!-- <input type="number" class="form-control" value="<%=pet.gender%>" placeholder="Age" required name="age"> -->
                                                            <!-- <div class="col-md-12"> -->
                                                                <select class="form-select" name="gender" id="validationCustom04" required>
                                                                    <option selected="" disabled="" value="">Select Gender...</option>
                                                                    <%if(pet.gender==1){%>
                                                                   <option value="1" selected>Male</option>
                                                                    <%}else{%>
                                                                   <option value="0" selected>Female</option>
                                                                        <%}%>
                                                                </select>
                                                            <!-- </div> -->
                                                        </div>
                                                        <div class="form-group">
                                                            <label>Breed:</label>
                                                            <input type="text" class="form-control" value="<%=pet.breed%>" placeholder="Breed" required name="breed">
                                                        </div>
                                                        <div class="form-group">
                                                            <label>Weight:</label>
                                                            <input type="text" class="form-control" value="<%=pet.weight%>" placeholder="Weight" required name="weight">
                                                        </div>
                                                <div class="form-group">
                                                    <label>About Us</label>
                                                    <textarea id="description" class="form-control" placeholder="About Us" required name="about"><%=pet.about%></textarea>
                                                </div>
                    
                                        <div style="margin-top: 10px;">
                                            <button type="button" style="background-color:#ec4747; border-color: #ec4747; margin-top: 10px;"  class="btn btn-danger btn-rounded"><a style="color:white;" href="/pets">Cancel</a></button>
                                            <button type="submit" style="margin-top: 10px; background-color: #37c1f8;" class="btn btn-primary btn-rounded">Update <i class="icon-arrow-right14 position-right"></i></button>
                                        </div>
                    
                                    </div>
                            </div>
                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    </body>
    <%- include('../partials/footer')%>
