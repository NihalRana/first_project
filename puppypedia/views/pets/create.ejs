<!DOCTYPE html>
<html>
<%- include('../partials/header')%>

    <body>
        <div id="preloader"><div id="status"><div class="spinner"></div></div></div>

        <%- include('../partials/navbar')%>
            <%- include('../partials/sidebar')%>
                <div class="main-content">
                    <div class="page-content">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="card">
                                        <div class="card-body">

                                            <h4 class="card-title">Add Pet</h4>
                                           <p></p>
                                            <form action="" method="post" id="addPet" enctype="multipart/form-data">
                                                <div class="panel panel-flat">
                                                    <div class="panel-body col-md-6">
                                                        <label for="image">
                                                            <img src="/assets/images/categories/add_img.png" id="imageid" height="150" width="150" />
                                                            
                                                        </label><p></p>
                                                        <input type="file" name="image" id="image" class="form-control" required/><p></p>
                                                         <select class="form-select" name="userid" id="validationCustom04" required="">
                                                            <option selected="" disabled="" value="">Select Owner...</option>
                                                            <% users.forEach(function(user) { %>
                                                                <option value="<%=user.id%>" ><%=user.name%>
                                                                </option>
                                                            <%})%>
                                                        </select>
                                                       
                                                        </div>
                                                        <div class="form-group">
                                                            <label></label>
                                                            <input type="text" class="form-control" placeholder="Name"
                                                                required name="name">
                                                        </div>


                                                        <div class="form-group">
                                                            <label></label>
                                                            <div class="row">
                                                                <div class="col-md-4">
                                                                    <select class="form-select" name="gender" id="validationCustom04" required>
                                                                        <option selected="" disabled="" value="">Select Gender...</option>
                                                                       <option value="1">Male</option>
                                                                       <option value="0">Female</option>

                                                                    </select>
                                                                </div>
                                                                
                                                                <div class="col-md-8">
                                                                    <input type="number" min="1" id="age" class="form-control"
                                                                        placeholder="Age" required name="age">
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label></label>
                                                            <div class="row">
                                                                <div class="col-md-4">
                                                                    <input type="text" class="form-control"
                                                                        placeholder="Weight" name="weight" required>
                                                                </div>
                                                                <div class="col-md-8">
                                                                    <input type="text" class="form-control"
                                                                        placeholder="Bread" name="breed" required>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="form-group">
                                                            <label></label>
                                                            <textarea class="form-control" name="about"
                                                                placeholder="About Pet" required></textarea>
                                                        </div>
                                                        <div class="text-right">
                                                            <button type="button"
                                                                style="background-color:#ec4747; border-color: #ec4747; margin-top: 10px;"
                                                                class="btn btn-danger btn-rounded"><a
                                                                    style="color:white;"
                                                                    href="/pets">Cancel</a></button>
                                                            <button type="submit" style="margin-top: 10px; background-color: #37c1f8;"
                                                                class="btn btn-primary btn-rounded">Add <i
                                                                    class="icon-arrow-right14 position-right"></i></button>
                                                        </div>

                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    </body>
    <%- include('../partials/footer')%>
    <script>
        $(document).ready(function() {

            $("#addPet").validate({
                rules: {
                    name: {
                        maxlength: 15,
                      
                    },
                    image:{
                        required:true
                    }
                },
                messages: {
                    name: {
						maxlength: "Name cannot be more than 15 characters",
					},
                    image:{
                        required:"This field is required"
                    }
                }
            });

        });
    </script>
</html>