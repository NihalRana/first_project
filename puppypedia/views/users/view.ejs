<!DOCTYPE html>
<html>
<%- include('../partials/header')%>

    <body>
        <!-- <div id="preloader"><div id="status"><div class="spinner"></div></div></div> -->

        <%- include('../partials/navbar')%>
            <%- include('../partials/sidebar')%>
                <div class="main-content">
                    <div class="page-content">
                        <div class="container-fluid">
                            
                            <div class="col-md-6">
                                <div class="card">
                                    <div class="card-body">

                                        <h2 class="card-title">User Details</h2>           
                                        <p class="card-title-desc"></p>

                                        <div class="row mb-3">
                                            <label for="example-text-input" class="col-sm-2 col-form-label"></label>
                                            <div class="col-sm-10 col-form-label">
                                                <% if(user.image != '') { %>
                                                     <img id="blah"  style="height: 150px;" class="img-fluid img-thumbnail my-3" src="/assets/images/users/<%= user.image%>" />
                                                <% } else { %>
                                                    <img id="blah" style="height: 150px;" class="img-fluid img-thumbnail my-3" src="/assets/images/users/user.png" />
                                                <% } %> 
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <label for="example-text-input" class="col-sm-2 col-form-label">Name:</label>
                                            <div class="col-sm-10 col-form-label">
                                              <%=user.name%>
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <label for="example-text-input" class="col-sm-2 col-form-label">Email:</label>
                                            <div class="col-sm-10 col-form-label">
                                              <%=user.email%>
                                            </div>
                                        </div>

                                      <div >
                                        <button type="button" style="margin-left:150px; margin-top: 10px; background-color: #37c1f8;"  class="btn btn-primary btn-rounded"><a style="color:white;" href="/users">Back</a></button>

                                      </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    </body>
    <%- include('../partials/footer')%>

</html>