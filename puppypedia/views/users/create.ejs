<!DOCTYPE html>
<html>
<%- include('../partials/header')%>

    <body>
        <div id="preloader"><div id="status"><div class="spinner"></div></div></div>

        <%- include('../partials/navbar')%>
            <%- include('../partials/sidebar')%>
                <div class="main-content">
                    <div class="page-content">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="card">
                                        <div class="card-body">

                                            <h4 class="card-title">Add User</h4>
                                            <!-- <a href="#" style="float: right; margin-bottom: 10px;" class="btn btn-primary waves-effect waves-light">Add Pets</a> -->
                                            <form action=""  method="post"  enctype="multipart/form-data">
                                                <div class="panel panel-flat">
                                                    <div class="panel-body col-md-6">
                                                        <label for="image">
                                                            <input type="file" name="image" id="image" style="display:none;" required/>
                                                                    <img src="/assets/images/categories/add_img.png" class="img-fluid img-thumbnail my-3" id="imageid" height="100" width="100" />

                                                         </label>
                                                        <div class="form-group">
                                                            <label>Name:</label>
                                                            <input type="text" class="form-control" placeholder="Name" required name="name">
                                                        </div>
                    
                                                      
                    
                                        <div class="form-group">
                                            <label>Email:</label>
                                            <input type="email" id="email" class="form-control" placeholder="Email" required name="email">
                                            <span class="error" id="emailExists"></span>
                                            <!-- <label id="password-error" class="validation-invalid-label validation-valid-label" for="password">Success.</label> -->
                                        </div>
                    
                                        <div class="form-group">
                                            <label>Password:</label>
                                            <input type="password" name="password" id="password" class="form-control" required="required" placeholder="Password">
                                        </div>
                    
                                        <div class="form-group">
                                            <label>Repeat Password:</label>
                                            <input type="password" name="repeat_password" class="form-control" required="required" placeholder="Repeat Password">
                                        </div>
                    
                                        <div class="text-right">
                                            <button type="button" style="background-color:#ec4747; border-color: #ec4747; margin-top: 10px;"  class="btn btn-danger btn-rounded"><a style="color:white;" href="/users">Cancel</a></button>
                                            <button type="submit" style="margin-top: 10px; background-color: #37c1f8;" class="btn btn-primary btn-rounded">Add <i class="icon-arrow-right14 position-right"></i></button>
                                        </div>
                    
                                    </div>
                            </div>
                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    </body>
    <%- include('../partials/footer')%>

</html>