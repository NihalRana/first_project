<!DOCTYPE html>
<html>
<%- include('../partials/header')%>

    <body>
        <div id="preloader"><div id="status"><div class="spinner"></div></div></div>

        <%- include('../partials/navbar')%>
            <%- include('../partials/sidebar')%>
                <div class="main-content">
                    <div class="page-content">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="card">
                                        <div class="card-body">

                                            <h4 class="card-title">Add Banner</h4>
                                            <!-- <a href="#" style="float: right; margin-bottom: 10px;" class="btn btn-primary waves-effect waves-light">Add Banners</a> -->
                                             <form action="/banner/create" id="addBanner" method="post" enctype="multipart/form-data">
                                                <div class="panel panel-flat">
                                                    <div class="panel-body col-md-6">
                                                        <div class="form-group">
                                                        <label for="image" style="margin-bottom: 20px;">
                                                            <img src="/assets/images/categories/add_img.png" class="img-fluid img-thumbnail my-3" id="imageid" height="100" width="100"  />
                                                        </label>

                                                        <input type="file" name="image" id="image"  class="form-control" required />
                                                        <!-- <label id="userpassword-error" class="error" for="userpassword"></label> -->
                                                        <!-- <label id="image-error" class="error" for="image" style="display:inline !important;"></label> -->
                                                         </div>
                                                       
                                        <div class="form-group">
                                            <label style="margin-top:10px ;">Description</label>
                                            <textarea type="text" id="description" class="form-control" placeholder="Description" required name="description"></textarea>
                                            <!-- <label id="password-error" class="validation-invalid-label validation-valid-label" for="password">Success.</label> -->
                                        </div>
                                        <div class="text-right">
                                            <button type="button" style="background-color:#ec4747; border-color: #ec4747; margin-top: 10px;"  class="btn btn-danger btn-rounded"><a style="color:white;" href="/banners">Cancel</a></button>
                                            <button type="submit" style="margin-top: 10px; background-color: #37c1f8;" class="btn btn-primary btn-rounded">Add <i class="icon-arrow-right14 position-right"></i></button>
                                        </div>
                    
                                    </div>
                            </div>
                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    </body>
    <%- include('../partials/footer')%>
    <script>
        $(document).ready(function() {

            $("#addBanner").validate({
                rules: {
                  
                    image:{
                        required:true
                    }
                },
                messages: {
                   
                    image:{
                        required:"This field is required"
                    }
                }
            });

        });
    </script>
</html>