<!DOCTYPE html>
<html>
<%- include('../partials/header')%>

    <body>
        <div id="preloader"><div id="status"><div class="spinner"></div></div></div>

        <%- include('../partials/navbar')%>
            <%- include('../partials/sidebar')%>
                <div class="main-content">
                    <div class="page-content">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="card">
                                        <div class="card-body">
                                           
                                            <h4 class="card-title">Changed Password</h4>
                                           <p></p>
                                           
                                            <form action="/changepassword" id="password" method="post" enctype="multipart/form-data">
                                                <div class="panel panel-flat">
                                                    <div class="panel-body col-md-8">
                                                      
                                                        <div class="form-group">
                                                            <label>Old Password</label>
                                                            <input type="password" class="form-control" placeholder="Old Password"
                                                                required  name="oldpassword"><br>
                                                        </div>

                                                        <div class="form-group">
                                                            <label>New Password</label>
                                                            <input type="password" class="form-control" id="newpassword" placeholder="New Password"
                                                                required  name="newpassword"><br>
                                                        </div>

                                                        <div class="form-group">
                                                            <label>Confirm Password</label>
                                                            <input type="password" class="form-control" placeholder="Confirm Password"
                                                                required  name="confirmpassword"><br>
                                                        </div>
                                                      
                                                        <div class="text-right">
                                                            
                                                            <button type="submit" style="margin-top: 10px; background-color: #37c1f8;"
                                                                class="btn btn-primary btn-rounded">Update <i
                                                                    class="icon-arrow-right14 position-right"></i></button>
                                                        </div>

                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    </body>
    <%- include('../partials/footer')%>
    <script>
        $(document).ready(function() {
           
            $("#password").validate({
                rules: {
                  
                    oldpassword: {
                        required: true,
                    },
                    newpassword: {
                        required: true,
                        minlength: 6
                    },
                    confirmpassword: {
                        required: true,
                        minlength: 6,
                        equalTo: "#newpassword"
                    }
                },  
                messages: {           
                
                    oldpassword: {
                        required: "Old Password is required",
                    },
                    newpassword: {
                        required: "New Password is required",
                        minlength: "Password must be at least 6 characters"
                    },
                    confirmpassword: {
                        required: "Confirm New Password is required",
                        minlength: "Password must be at least 6 characters",
                        equalTo:"Confirm Password must be same with new password"
                    }
                },
        });
        })
    
    </script>
</html>