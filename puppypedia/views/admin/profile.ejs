<!DOCTYPE html>
<html>
<%- include('../partials/header')%>

    <body>
        <div id="preloader"><div id="status"><div class="spinner"></div></div></div>

        <%- include('../partials/navbar')%>
            <%- include('../partials/sidebar')%>
                <div class="main-content">
                    <div class="page-content">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="card">
                                        <div class="card-body">

                                            <h4 class="card-title">Profile</h4>
                                           
                                            <form action="/profile" method="post" enctype="multipart/form-data">
                                                <div class="panel panel-flat">
                                                    <div class="panel-body col-md-8">
                                                        <label for="image">
                                                            <input type="file" name="image" id="image" style="display:none;"/>

                                                                <img src="/assets/images/admin/<%=session.image%>" id="imageid" class="img-fluid img-thumbnail my-3" height="100" width="100" />
                          
                                                         </label>
                                                        <div class="form-group">
                                                            <label>Name</label>
                                                            <input type="text" class="form-control" placeholder="Name"
                                                                required value="<%=session.name%>" name="name">
                                                        </div>

                                                        <div class="form-group">
                                                            <label>Email</label>
                                                            <input type="email" class="form-control" placeholder="Email"
                                                                required value="<%=session.email%>" name="email">
                                                        </div>


                                                      
                                                        <div class="text-right">
                                                            
                                                            <button type="submit" style="margin-top: 10px; background-color: #37c1f8;"
                                                                class="btn btn-primary btn-rounded">Submit <i
                                                                    class="icon-arrow-right14 position-right"></i></button>
                                                        </div>

                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    </body>
    <%- include('../partials/footer')%>

</html>